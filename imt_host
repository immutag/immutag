#!/bin/bash

#sudo docker run -it --name immutag \
#-v /home/daveamd/projects/work/immutag:/immutag \
#-v electrumsv-immutag:/root/.electrums-sv immutag:0.0.2 \
#bash

input="$@"
cmd=$(echo "$input" | cut -d " " -f 1)

sudo docker run -it \
-v "$HOME"/immutag:/root/immutag \
immutag:0.0.9 \
imt $input

if [ "$cmd" = "find" ];then

    cat ~/immutag/.find_output | sed "s/\/root\/immutag/\/home\/$(whoami)\/immutag/g"
fi

